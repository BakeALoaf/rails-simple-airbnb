<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Flats (<%= @flats.count %>)</h1>
    </div>
  </div>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-4">
        <div class="flat-card">
        <a href="<%= flat_path(flat)%>"><div class="flat-card-image" style="background-image: url('https://media.istockphoto.com/id/1415886887/de/foto/frisch-gestrichenes-handwerker-bungalowhaus.jpg?s=1024x1024&w=is&k=20&c=IzuIrwKF4yikzBsMhIMZj6FjwRpmjel_bIVxogPuWyQ=')"></div></a>
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= flat.name %></h4>
            </div>
            <p><%= flat.address %></p>
            <div class="flex">
              <div class="flex">
                <i class="bi bi-people">people</i><span><%= flat.number_of_guests %></span>
              </div>
              <div class="flex ml-3">
                <i class="bi bi-currency-euro">euro_symbol</i> <%= flat.price_per_night %>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <%= link_to "More info", flat_path(flat), class:"ml-3 text-primary"%>
             |
            <%= link_to "Edit", edit_flat_path(flat), class:"ml-3 text-warning"%>
             |
            <%= link_to "Delete", flat_path(flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"ml-3 text-danger"%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
